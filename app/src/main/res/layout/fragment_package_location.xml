<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team20.java.expressassistant1.PackageOperationPanelTemp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24dp"
        android:id="@+id/PanelTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PackageName"
        android:text=""
        android:textSize="24dp"

        android:layout_below="@+id/PanelTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="350dp"
        />

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/PackageName"
        android:layout_marginTop="30dp"
        tools:context="com.team20.java.expressassistant1.PackageLocation">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/webFragmentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@android:color/holo_purple"
            android:gravity="center_horizontal"
            android:text="Current Location:BJTU" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_below="@+id/webFragmentTextView"
            android:layout_gravity="center_horizontal|bottom">

        </WebView>
    </FrameLayout>
</RelativeLayout>


