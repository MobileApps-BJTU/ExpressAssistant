<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team20.java.expressassistant1.EndTransaction">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure to cancel the transaction?"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="101dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewCancel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sure"
        android:textSize="20dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/textViewCancel"
        android:layout_alignStart="@+id/textViewCancel"
        android:layout_marginLeft="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20dp"
        android:id="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_alignRight="@+id/textViewCancel"
        android:layout_alignEnd="@+id/textViewCancel"
        android:layout_marginRight="30dp"/>
</RelativeLayout>
